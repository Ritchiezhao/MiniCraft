<?xml version='1.0' encoding='utf-8' ?>
<Root>
  <BehaviorTemplate name="Marine">
    <BehaviorTree>
        <SequenceNode >
          <ConditionNode expression="UnitNumber >= 3">
            <ActionNode behavior="MoveToEnemyBase"/>
          </ConditionNode>
          <ActionNode behavior="Idle"/>
        </SequenceNode>
    </BehaviorTree>

    <BlackBoard>
      <Variable name="UnitNumber" value="0" type="int"/>
    </BlackBoard>
  </BehaviorTemplate>
</Root>

